<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "email" %>
    <%= form.text_field "email" %>
  </p>
  <p>
    <%= form.label "phone_number" %>
    <%= form.text_field "phone_number" %>
  </p>
  <p>
    <%= form.hidden_field "company_id" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>